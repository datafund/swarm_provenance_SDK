{
  "name": "@datafund/swarm-provenance",
  "version": "0.1.0",
  "description": "TypeScript SDK for Swarm Provenance - store and retrieve provenance data via the Swarm network",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "swarm",
    "provenance",
    "datafund",
    "decentralized",
    "storage",
    "blockchain"
  ],
  "author": "Datafund",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/datafund/swarm_provenance_SDK.git"
  },
  "homepage": "https://github.com/datafund/swarm_provenance_SDK#readme",
  "bugs": {
    "url": "https://github.com/datafund/swarm_provenance_SDK/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  },
  "dependencies": {
    "@noble/hashes": "^1.3.3"
  }
}
